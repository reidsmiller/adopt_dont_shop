<h1><%= @app.name %>'s Application for Adoption Approval</h1>
<ul>
  <li>Application Status: <%= @app.status %></li>
  <li>Street Address: <%= @app.street_address %></li>
  <li>City: <%= @app.city %></li>
  <li>State: <%= @app.state %></li>
  <li>Zip Code: <%= @app.zip_code %></li>
  <li>Description: <%= @app.description %></li>
  <li>Applied to Adopt:</li>
  <ol>
    <% @pets.each do |pet| %>
      <li id="Admin_<%= pet.id %>">
      <%= link_to "#{pet.name}", "/pets/#{pet.id}" %>
      <% if @app_pets.where("pet_id = ?", pet.id).first.status == "Pending" %>
        <%= form_with url: "/admin/apps/#{@app.id}", method: :get, local: true do |form| %>
          <%= form.hidden_field :pet_id, value: "#{pet.id}" %>
          <%= form.submit 'Approve' %>
        <% end %>
        <%= form_with url: "/admin/apps/#{@app.id}", method: :get, local: true do |form| %>
          <%= form.hidden_field :pet_id, value: "#{pet.id}" %>
          <%= form.submit 'Reject' %>
        <% end %>
      <% elsif @app_pets.where("pet_id = ?", pet.id).first.status == "Approved" %>
        <p>Adoption Approved</p>
      <% elsif @app_pets.where("pet_id = ?", pet.id).first.status == "Rejected" %>
        <p>Adoption Rejected</p>
      <% end %>
      </li>
    <% end %>
  </ol>
</ul>